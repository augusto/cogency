---
export interface Props {
	title?: string;
	language?: string;
	showHeader?: boolean;
}

const { title = "", showHeader = true } = Astro.props;
---

<div class="overflow-hidden rounded-xl border border-gray-700 bg-gray-900">
	{
		showHeader && (
			<div class="flex items-center justify-between bg-gray-800 px-6 py-3">
				<div class="flex items-center gap-2">
					<div class="h-3 w-3 rounded-full bg-red-500" />
					<div class="h-3 w-3 rounded-full bg-yellow-500" />
					<div class="h-3 w-3 rounded-full bg-green-500" />
				</div>
				{title && <span class="text-sm text-gray-400">{title}</span>}
			</div>
		)
	}
	<pre
		class="overflow-x-auto p-6 text-sm"><code class="text-gray-300"><slot /></code></pre>
</div>
