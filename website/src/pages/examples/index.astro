---
import Layout from "../../components/Layout.astro";
import CodeBlock from "../../components/CodeBlock.astro";

const title = "Examples - Cogency AI Agents";
const description =
	"Real-world examples of AI agents built with Cogency. From simple chatbots to complex reasoning systems, see how easy it is to build powerful agents.";
const keywords =
	"AI agent examples, python AI agents, cogency examples, agent implementations, AI agent tutorials";
const canonicalUrl = "https://cogency.dev/examples";
---

<Layout
	title={title}
	description={description}
	keywords={keywords}
	canonicalUrl={canonicalUrl}
>
	<!-- Hero -->
	<section class="px-6 py-24 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h1
				class="mb-6 text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl"
			>
				<span
					class="bg-gradient-to-r from-white via-blue-100 to-purple-200 bg-clip-text text-transparent"
				>
					Real-world Examples
				</span>
			</h1>
			<p class="mx-auto mb-8 max-w-2xl text-xl text-gray-300">
				See Cogency in action with practical examples that you can copy, modify,
				and deploy.
			</p>
		</div>
	</section>

	<!-- Examples Grid -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<div class="grid gap-8 lg:grid-cols-2">
				<!-- Basic Agent -->
				<div class="rounded-xl border border-gray-700 bg-gray-900/50 p-6">
					<div class="mb-4 flex items-center gap-3">
						<span
							class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-500/10 text-sm font-semibold text-blue-400"
							>1</span
						>
						<h3 class="text-xl font-bold text-white">Basic Agent</h3>
						<span
							class="rounded-full bg-green-500/10 px-2 py-1 text-xs text-green-400"
							>Beginner</span
						>
					</div>
					<p class="mb-4 text-gray-300">
						A simple agent that can answer questions and perform calculations.
					</p>
					<CodeBlock>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.agent</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Agent</span>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.llm</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">GeminiLLM</span>

						<span class="text-white">agent</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">Agent</span><span class="text-white"
							>(</span
						>
						<span class="text-blue-400">name</span><span class="text-pink-400"
							>=</span
						><span class="text-green-400">"Helper"</span><span
							class="text-white">,</span
						>
						<span class="text-blue-400">llm</span><span class="text-pink-400"
							>=</span
						><span class="text-yellow-400">GeminiLLM</span><span
							class="text-white">(</span
						><span class="text-blue-400">api_key</span><span
							class="text-pink-400">=</span
						><span class="text-green-400">"your-key"</span><span
							class="text-white">)</span
						>
						<span class="text-white">)</span>

						<span class="text-white">result</span>
						<span class="text-pink-400">=</span>
						<span class="text-pink-400">await</span>
						<span class="text-white">agent</span><span class="text-white"
							>.</span
						><span class="text-yellow-400">run</span><span class="text-white"
							>(</span
						><span class="text-green-400">"What is 15 * 23?"</span><span
							class="text-white">)</span
						>
					</CodeBlock>
				</div>

				<!-- Customer Support -->
				<div class="rounded-xl border border-gray-700 bg-gray-900/50 p-6">
					<div class="mb-4 flex items-center gap-3">
						<span
							class="flex h-8 w-8 items-center justify-center rounded-lg bg-green-500/10 text-sm font-semibold text-green-400"
							>2</span
						>
						<h3 class="text-xl font-bold text-white">Customer Support</h3>
						<span
							class="rounded-full bg-yellow-500/10 px-2 py-1 text-xs text-yellow-400"
							>Intermediate</span
						>
					</div>
					<p class="mb-4 text-gray-300">
						Support agent with memory and knowledge base access.
					</p>
					<CodeBlock>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.agent</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Agent</span>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.memory</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">SemanticMemory</span>

						<span class="text-white">agent</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">Agent</span><span class="text-white"
							>(</span
						>
						<span class="text-blue-400">name</span><span class="text-pink-400"
							>=</span
						><span class="text-green-400">"Support Agent"</span><span
							class="text-white">,</span
						>
						<span class="text-blue-400">llm</span><span class="text-pink-400"
							>=</span
						><span class="text-yellow-400">GeminiLLM</span><span
							class="text-white">(),</span
						>
						<span class="text-blue-400">memory</span><span class="text-pink-400"
							>=</span
						><span class="text-yellow-400">SemanticMemory</span><span
							class="text-white">()</span
						>
						<span class="text-white">)</span>

						<span class="text-gray-500"
							># Tools auto-discovered from /tools/</span
						>
					</CodeBlock>
				</div>

				<!-- Research Agent -->
				<div class="rounded-xl border border-gray-700 bg-gray-900/50 p-6">
					<div class="mb-4 flex items-center gap-3">
						<span
							class="flex h-8 w-8 items-center justify-center rounded-lg bg-purple-500/10 text-sm font-semibold text-purple-400"
							>3</span
						>
						<h3 class="text-xl font-bold text-white">Research Agent</h3>
						<span
							class="rounded-full bg-orange-500/10 px-2 py-1 text-xs text-orange-400"
							>Advanced</span
						>
					</div>
					<p class="mb-4 text-gray-300">
						Multi-step research agent with web search and analysis.
					</p>
					<CodeBlock>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.agent</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Agent</span>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.tools</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">WebSearchTool</span>

						<span class="text-white">agent</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">Agent</span><span class="text-white"
							>(</span
						>
						<span class="text-blue-400">name</span><span class="text-pink-400"
							>=</span
						><span class="text-green-400">"Research Assistant"</span><span
							class="text-white">,</span
						>
						<span class="text-blue-400">tools</span><span class="text-pink-400"
							>=</span
						><span class="text-white">[</span><span class="text-yellow-400"
							>WebSearchTool</span
						><span class="text-white">()],</span>
						<span class="text-blue-400">max_depth</span><span
							class="text-pink-400">=</span
						><span class="text-cyan-400">5</span>
						<span class="text-gray-500"># Deep reasoning</span>
						<span class="text-white">)</span>

						<span class="text-white">report</span>
						<span class="text-pink-400">=</span>
						<span class="text-pink-400">await</span>
						<span class="text-white">agent</span><span class="text-white"
							>.</span
						><span class="text-yellow-400">run</span><span class="text-white"
							>(</span
						>
						<span class="text-green-400">"Research AI trends in 2024"</span>
						<span class="text-white">)</span>
					</CodeBlock>
				</div>

				<!-- Production API -->
				<div class="rounded-xl border border-gray-700 bg-gray-900/50 p-6">
					<div class="mb-4 flex items-center gap-3">
						<span
							class="flex h-8 w-8 items-center justify-center rounded-lg bg-red-500/10 text-sm font-semibold text-red-400"
							>4</span
						>
						<h3 class="text-xl font-bold text-white">Production API</h3>
						<span
							class="rounded-full bg-red-500/10 px-2 py-1 text-xs text-red-400"
							>Production</span
						>
					</div>
					<p class="mb-4 text-gray-300">
						FastAPI integration with streaming and monitoring.
					</p>
					<CodeBlock>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">fastapi</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">FastAPI</span>
						<span class="text-pink-400">from</span>
						<span class="text-blue-400">cogency.agent</span>
						<span class="text-pink-400">import</span>
						<span class="text-white">Agent</span>

						<span class="text-white">app</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">FastAPI</span><span class="text-white"
							>()</span
						>
						<span class="text-white">agent</span>
						<span class="text-pink-400">=</span>
						<span class="text-yellow-400">Agent</span><span class="text-white"
							>(</span
						><span class="text-blue-400">monitoring</span><span
							class="text-pink-400">=</span
						><span class="text-cyan-400">True</span><span class="text-white"
							>)</span
						>

						<span class="text-pink-400">@</span><span class="text-yellow-400"
							>app</span
						><span class="text-white">.</span><span class="text-yellow-400"
							>post</span
						><span class="text-white">(</span><span class="text-green-400"
							>"/chat"</span
						><span class="text-white">)</span>
						<span class="text-pink-400">async</span>
						<span class="text-pink-400">def</span>
						<span class="text-blue-400">chat</span><span class="text-white"
							>(</span
						><span class="text-blue-400">message</span><span class="text-white"
							>:</span
						>
						<span class="text-yellow-400">str</span><span class="text-white"
							>):</span
						>
						<span class="text-pink-400">async</span>
						<span class="text-pink-400">for</span>
						<span class="text-white">response</span>
						<span class="text-pink-400">in</span>
						<span class="text-white">agent</span><span class="text-white"
							>.</span
						><span class="text-yellow-400">stream</span><span class="text-white"
							>(</span
						><span class="text-white">message</span><span class="text-white"
							>):</span
						>
						<span class="text-pink-400">yield</span>
						<span class="text-white">response</span>
					</CodeBlock>
				</div>
			</div>
		</div>
	</section>

	<!-- Coming Soon -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-6 text-3xl font-bold text-white">
				More Examples Coming Soon
			</h2>
			<p class="mb-8 text-xl text-gray-300">
				We're building a comprehensive library of examples for every use case.
			</p>
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-4">
					<h3 class="mb-2 text-lg font-semibold text-white">Discord Bot</h3>
					<p class="text-sm text-gray-400">
						AI-powered Discord moderator and assistant
					</p>
				</div>
				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-4">
					<h3 class="mb-2 text-lg font-semibold text-white">Data Analysis</h3>
					<p class="text-sm text-gray-400">
						Automated insights from CSV and databases
					</p>
				</div>
				<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-4">
					<h3 class="mb-2 text-lg font-semibold text-white">
						E-commerce Helper
					</h3>
					<p class="text-sm text-gray-400">
						Product recommendations and support
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-6 text-3xl font-bold text-white">
				Ready to Build Your Own?
			</h2>
			<p class="mb-8 text-xl text-gray-300">
				Start with any example and customize it for your needs
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center sm:gap-6">
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-lg bg-blue-600 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-blue-500 focus:ring-4 focus:ring-blue-500/50"
				>
					Get Started
					<svg
						class="ml-2 h-5 w-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 7l5 5-5 5M6 12h12"></path>
					</svg>
				</a>
				<a
					href="https://github.com/iteebz/cogency"
					class="inline-flex items-center justify-center rounded-lg border border-gray-600 bg-gray-800/50 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-gray-700"
				>
					<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					View on GitHub
				</a>
			</div>
		</div>
	</section>
</Layout>
