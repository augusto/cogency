---
import Layout from "../../components/Layout.astro";
import FeatureHero from "../../components/FeatureHero.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import FeatureGrid from "../../components/FeatureGrid.astro";

const title = "Real-Time AI Agent Streaming - Cogency";
const description =
	"Watch your agents think in real-time with streaming execution and beautiful traces. Stream-first architecture where agents yield execution steps for transparent reasoning.";
const keywords =
	"real time AI agent streaming, live AI agent execution, streaming AI framework, python streaming agents, ai agent traces, transparent reasoning";
const canonicalUrl = "https://cogency.dev/features/streaming";

const relatedFeatures = [
	{
		href: "/features/multi-step-reasoning",
		title: "Multi-step Reasoning",
		description: "Stream each step of the reasoning process live.",
		icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
		color: "orange"
	},
	{
		href: "/features/production-ready",
		title: "Production Ready",
		description: "Real-time monitoring and performance metrics.",
		icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
		color: "emerald"
	},
	{
		href: "/features/zero-config",
		title: "Zero Configuration",
		description: "Streaming works out of the box, no setup required.",
		icon: "M13 10V3L4 14h7v7l9-11h-7z",
		color: "blue"
	}
];
---

<Layout
	title={title}
	description={description}
	keywords={keywords}
	canonicalUrl={canonicalUrl}
>
	<FeatureHero
		badge="üåä Stream-First Architecture"
		badgeColor="border-purple-500/20 bg-purple-500/10 text-purple-400"
		title="Watch agents"
		titleGradient="from-white via-purple-100 to-purple-200"
		subtitle="think in real-time"
		description="Stream-first architecture where agents yield execution steps for transparent reasoning. See every thought, decision, and action as it happens."
		ctaText="See Live Streaming"
		ctaLink="#streaming"
		ctaColor="bg-purple-600 hover:bg-purple-500 focus:ring-purple-500/50"
	/>

	<!-- Streaming Example -->
	<section id="streaming" class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold text-white">
					Real-Time Agent Execution
				</h2>
				<p class="text-xl text-gray-300">
					Watch every step unfold as your agent works
				</p>
			</div>

			<CodeBlock title="streaming_agent.py">
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.agent</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">Agent</span>
				<span class="text-pink-400">from</span>
				<span class="text-blue-400">cogency.services.llm</span>
				<span class="text-pink-400">import</span>
				<span class="text-white">GeminiLLM</span>

				<span class="text-white">agent</span>
				<span class="text-pink-400">=</span>
				<span class="text-yellow-400">Agent</span><span class="text-white"
					>(</span
				>
				<span class="text-blue-400">name</span><span class="text-pink-400"
					>=</span
				><span class="text-green-400">"StreamAgent"</span><span
					class="text-white">,</span
				>
				<span class="text-blue-400">llm</span><span class="text-pink-400"
					>=</span
				><span class="text-yellow-400">GeminiLLM</span><span class="text-white"
					>(</span
				><span class="text-blue-400">api_key</span><span class="text-pink-400"
					>=</span
				><span class="text-green-400">"your-key"</span><span class="text-white"
					>)</span
				>
				<span class="text-white">)</span>

				<span class="text-gray-500"
					># Stream the agent's execution in real-time</span
				>
				<span class="text-pink-400">async</span>
				<span class="text-pink-400">for</span>
				<span class="text-white">chunk</span>
				<span class="text-pink-400">in</span>
				<span class="text-white">agent</span><span class="text-white">.</span
				><span class="text-yellow-400">stream</span><span class="text-white"
					>(</span
				><span class="text-green-400">"What is 127 * 43?"</span><span
					class="text-white">):</span
				>
				<span class="text-pink-400">print</span><span class="text-white">(</span
				><span class="text-white">chunk</span><span class="text-white">)</span>
			</CodeBlock>

			<!-- Live Output Simulation -->
			<div class="mt-8 rounded-xl border border-gray-700 bg-gray-900">
				<div class="rounded-t-xl bg-gray-800 px-6 py-3">
					<h3 class="font-semibold text-white">Live Agent Output</h3>
				</div>
				<div class="space-y-3 p-6 font-mono text-sm">
					<div class="text-blue-400">
						üß† PLAN: I need to calculate 127 * 43. I'll use the calculator tool.
					</div>
					<div class="text-green-400">
						üí≠ REASON: This is a simple multiplication that I can solve with
						tools.
					</div>
					<div class="text-yellow-400">
						‚ö° ACT: Using calculator tool with 127 * 43...
					</div>
					<div class="text-purple-400">
						üîÑ REFLECT: Calculator returned 5461. This seems correct.
					</div>
					<div class="text-orange-400">‚ú® RESPOND: The answer is 5461.</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Stream Types -->
	<section class="bg-gray-900/50 px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-3xl font-bold text-white">
				Rich Stream Types
			</h2>
			<div class="grid gap-8 lg:grid-cols-2">
				<div class="space-y-6">
					<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-6">
						<h3 class="mb-4 text-xl font-bold text-white">Execution Streams</h3>
						<ul class="space-y-3 text-gray-300">
							<li class="flex items-start gap-2">
								<span class="text-blue-400">üß†</span>
								<span
									><strong>Planning:</strong> Goal decomposition and step planning</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-green-400">üí≠</span>
								<span
									><strong>Reasoning:</strong> Analysis and decision-making process</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-yellow-400">‚ö°</span>
								<span
									><strong>Actions:</strong> Tool calls and external interactions</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-purple-400">üîÑ</span>
								<span
									><strong>Reflection:</strong> Self-evaluation and error correction</span
								>
							</li>
						</ul>
					</div>
				</div>

				<div class="space-y-6">
					<div class="rounded-xl border border-gray-700 bg-gray-800/50 p-6">
						<h3 class="mb-4 text-xl font-bold text-white">
							Monitoring Streams
						</h3>
						<ul class="space-y-3 text-gray-300">
							<li class="flex items-start gap-2">
								<span class="text-red-400">üìä</span>
								<span
									><strong>Metrics:</strong> Performance and usage statistics</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-cyan-400">üîç</span>
								<span
									><strong>Traces:</strong> Full execution traces with timing</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-pink-400">‚ö†Ô∏è</span>
								<span
									><strong>Errors:</strong> Exception details and stack traces</span
								>
							</li>
							<li class="flex items-start gap-2">
								<span class="text-emerald-400">‚úÖ</span>
								<span
									><strong>Events:</strong> Lifecycle and state change events</span
								>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Benefits -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-3xl font-bold text-white">
				Why Streaming Matters
			</h2>
			<div class="grid gap-8 lg:grid-cols-3">
				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-purple-500/10"
					>
						<svg
							class="h-8 w-8 text-purple-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
							></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">Full Transparency</h3>
					<p class="text-gray-300">
						See exactly how your agent reasons through problems, making
						debugging and optimization straightforward.
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-blue-500/10"
					>
						<svg
							class="h-8 w-8 text-blue-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">Instant Feedback</h3>
					<p class="text-gray-300">
						No waiting for final results‚Äîsee progress immediately and intervene
						when needed for better user experience.
					</p>
				</div>

				<div class="text-center">
					<div
						class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-green-500/10"
					>
						<svg
							class="h-8 w-8 text-green-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
							></path>
						</svg>
					</div>
					<h3 class="mb-4 text-xl font-bold text-white">
						Production Monitoring
					</h3>
					<p class="text-gray-300">
						Built-in observability for production deployments with real-time
						performance metrics and alerting.
					</p>
				</div>
			</div>
		</div>
	</section>

	<FeatureGrid title="Streaming Excellence" features={relatedFeatures} />

	<!-- CTA -->
	<section class="px-6 py-16 sm:px-8 lg:px-16">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-6 text-3xl font-bold text-white">
				Ready for Real-Time Agents?
			</h2>
			<p class="mb-8 text-xl text-gray-300">
				Experience the transparency and control of streaming AI execution
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center sm:gap-6">
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-lg bg-purple-600 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-purple-500 focus:ring-4 focus:ring-purple-500/50"
				>
					Start Streaming
					<svg
						class="ml-2 h-5 w-5"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 7l5 5-5 5M6 12h12"></path>
					</svg>
				</a>
				<a
					href="https://github.com/iteebz/cogency"
					class="inline-flex items-center justify-center rounded-lg border border-gray-600 bg-gray-800/50 px-8 py-4 text-lg font-semibold text-white transition-all hover:bg-gray-700"
				>
					<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.30 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
						></path>
					</svg>
					View on GitHub
				</a>
			</div>
		</div>
	</section>
</Layout>
